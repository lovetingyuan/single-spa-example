{
  "name": "single-spa-example",
  "version": "1.0.0",
  "private": true,
  "description": "example of single-spa.",
  "scripts": {
    "serve": "npx cross-env NODE_ENV=development node serve-build",
    "build": "npx cross-env NODE_ENV=production node serve-build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lovetingyuan/single-spa-example.git"
  },
  "keywords": [
    "single-spa",
    "microfrontends",
    "vue",
    "react",
    "angular"
  ],
  "author": "tingyuan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lovetingyuan/single-spa-example/issues"
  },
  "homepage": "https://github.com/lovetingyuan/single-spa-example#readme",
  "workspaces": [
    "modules/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "concurrently": "^5.1.0",
    "cross-env": "^7.0.2",
    "jsdom": "^16.2.1",
    "merge-dirs": "^0.2.1",
    "parcel-bundler": "^1.12.4",
    "rimraf": "^3.0.2"
  },
  "dependencies": {
    "normalize.css": "^8.0.1",
    "single-spa": "^5.2.1"
  },
  "singleapp": {
    "navbar": {
      "entrypoint": "http://localhost:8081",
      "mountPath": "/",
      "serve": "npx cross-env PORT=8081 PUBLIC_URL=http://localhost:8081/ npm run serve"
    },
    "ng-app": {
      "entrypoint": "http://localhost:8082",
      "mountPath": "/angular-singleapp",
      "serve": "ng serve --disable-host-check --port 8082 --deploy-url http://localhost:8082/ --live-reload false"
    },
    "react-app": {
      "entrypoint": "//localhost:8083",
      "mountPath": "/react-singleapp",
      "output": "build",
      "serve": "npx cross-env PUBLIC_URL=//localhost:8083/ BROWSER=none PORT=8083 WDS_SOCKET_PORT=8083 npm start"
    },
    "vue-app": {
      "entrypoint": "http://localhost:8084",
      "mountPath": "/vue-singleapp",
      "serve": "npx cross-env PUBLIC_URL=http://localhost:8084/ npm run serve -- --port 8084 --public=http://localhost:8084",
      "default": true
    }
  }
}
